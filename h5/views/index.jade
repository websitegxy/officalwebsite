block content
  script(src='/js/index.js')
  //h3= title
  meta(name='viewport',content='width=device-width,initial-scale=1')
  section.header-area
     nav.nav.navbar-fixed-top.navbar-inverse
        div.container
            div.navbar-header
                button.navbar-toggle(data-toggle="collapse",data-target="#menu")
                    //span.sr-only toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand.nav-a(href="#") 测试
            div#menu.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li.nav-item
                        a.page-scroll.nav-a.nav-active(href="#home") 首页
                    li.nav-item
                        a.page-scoll.nav-a(href='#product') 全部产品
                    li.nav-item
                        a.page-scoll.nav-a(href="#new") 新闻活动
                    li.nav-item
                        a.page-scoll.nav-a(href="#contact") 技术支持/客户服务
     div#home
        div.carousel.slide#mycarousel(data-ride='carousel',data-interval='2000')
            //轮播指标
            ol.carousel-indicators
                li.active(data-target='#mycarousel',data-slide-to='0')
                li(data-target='#mycarousel',data-slide-to='1')
                li(data-target='#mycarousel',data-slide-to='2')
            //轮播项目
            div.carousel-inner
                div.item.active
                    img.carousel-img(src='/img/slider-1.jpg')
                div.item
                    img.carouser-img(src='/img/slider-2.jpg')
                div.item
                    img.carousel-img(src='/img/slider-3.jpg')
            //轮播导航
            a.carousel-control.left(href='#mycarousel',data-slide='prev')
                span.glyphicon.glyphicon-menu-left(aria-hidden='true')
            a.carousel-control.right(href='#mycarousel',data-slide='next')
                span.glyphicon.glyphicon-menu-right(aira-hidden='true')
  section#product
